source ./globals

set test_id     "1.109"
set exit_code   0
set job_id      0

print_header $test_id

#
# Spawn a job with a deadline and no time limit and a time-min too long
#
set timeout $max_job_delay
set timeout 50
set srun_pid [spawn $srun -v --begin now+60 --deadline now+62 --time-min 10 $bin_sleep 1 ]
expect {
	-re "Requested time limit is invalid" {
		set exit_code 1
		exp_continue
	}
	-re "Force Terminated job ($number)" {
		exp_continue
	}
	-re "job ($number) queued and waiting for resources" {
		set job_id $expect_out(1,string)
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		set exit_code 1
	}
	eof {
		wait
	}
}
if {$job_id != 0} {
	send_user "\nFAILURE: job submitted with a deadline too short\n"
	cancel_job $job_id
	exit 1
}

#
# test status deadline in sacct
#
set cycle_count 8
set not_support 0
for {set inx 0} {$inx < $cycle_count} {incr inx} {
	spawn $sacct  -n -P -X -j $job_id -o State
	expect {
		-re "SLURM accounting storage is disabled" {
			set not_support 1
			exp_continue
		}
		-re "DEADLINE" {
			set exit_code 0
			break
		}
		-re "COMPLETED" {
			send_user "\nFAILURE: job submitted with a deadline too short\n"
			set exit_code 1
			break
		}
		-re "CANCELLED by ($number)" {
				send_user "\nFAILURE: job killed by timeout before start\n"
			set exit_code 1
		}
		-re "($alpha_numeric)" {
			set exit_code 1
			sleep 3
		}
		timeout {
			send_user "\nFAILURE: sacct not responding\n"
			set exit_code 1
		}
		eof {
			wait
		}
	}
	if {$not_support != 0} {
		send_user "\nWARNING: can not test without accounting enabled\n"
		exit 0
	}
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
} else {
	send_user "\nFAILURE: job not with DEADLINE status.\n"
}
exit $exit_code
